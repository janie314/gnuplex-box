[
  {
    "tags": "users",
    "block": [
      {
        "name": "create $HOME/.config/sway/",
        "ansible.builtin.file": {
          "path": "/home/gnuplex/.config/sway/",
          "state": "directory",
          "mode": "0755"
        }
      },
      {
        "name": "Install sway config",
        "ansible.builtin.copy": {
          "src": "sway",
          "dest": "/home/gnuplex/.config/sway/config",
          "owner": "gnuplex",
          "group": "gnuplex",
          "mode": "0644",
          "backup": "yes"
        }
      },
      {
        "name": "create $HOME/.config/i3status/",
        "ansible.builtin.file": {
          "path": "/home/gnuplex/.config/i3status/",
          "state": "directory",
          "mode": "0755"
        }
      },
      {
        "name": "Install i3status config",
        "ansible.builtin.copy": {
          "src": "i3status",
          "dest": "/home/gnuplex/.config/i3status/config",
          "owner": "gnuplex",
          "group": "gnuplex",
          "mode": "0644",
          "backup": "yes"
        }
      },
      {
        "name": "Install inittab",
        "ansible.builtin.copy": {
          "src": "inittab",
          "dest": "/etc/inittab",
          "owner": "root",
          "group": "root",
          "mode": "0644",
          "backup": "yes"
        }
      },
      {
        "name": "Install doas.conf",
        "ansible.builtin.copy": {
          "src": "doas.conf",
          "dest": "/etc/doas.conf",
          "owner": "root",
          "group": "root",
          "mode": "0644",
          "backup": "yes"
        }
      }
    ]
  }
]
