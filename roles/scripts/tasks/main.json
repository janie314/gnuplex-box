[
  {
    "tags": "users",
    "block": [
      {
        "name": "Install update script",
        "ansible.builtin.copy": {
          "src": "update",
          "dest": "/usr/local/bin/update",
          "owner": "root",
          "group": "root",
          "mode": "0744",
          "backup": "yes"
        }
      },
      {
        "name": "Install gnuplex-run",
        "ansible.builtin.copy": {
          "src": "gnuplex-run",
          "dest": "/home/gnuplex/.local/bin/gnuplex-run",
          "owner": "gnuplex",
          "group": "gnuplex",
          "mode": "0744",
          "backup": "yes"
        }
      },
      {
        "name": "Install statusbar",
        "ansible.builtin.copy": {
          "src": "statusbar",
          "dest": "/home/gnuplex/.local/bin/statusbar",
          "owner": "gnuplex",
          "group": "gnuplex",
          "mode": "0744",
          "backup": "yes"
        }
      },
      {
        "name": "Install sway-run",
        "ansible.builtin.copy": {
          "src": "sway-run",
          "dest": "/home/gnuplex/.local/bin/sway-run",
          "owner": "gnuplex",
          "group": "gnuplex",
          "mode": "0744",
          "backup": "yes"
        }
      },
      {
        "name": "Install calparse",
        "ansible.builtin.git": {
          "repo": "https://github.com/janie314/calparse",
          "dest": "/home/gnuplex/.local/bin/calparse"
        },
        "become": true,
        "become_method": "su",
        "become_user": "gnuplex"
      },
      {
        "name": "Install weatherparse",
        "ansible.builtin.git": {
          "repo": "https://github.com/janie314/weatherparse",
          "dest": "/home/gnuplex/.local/bin/weatherparse"
        },
        "become": true,
        "become_method": "su",
        "become_user": "gnuplex"
      }
    ]
  }
]
